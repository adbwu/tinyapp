<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="row align-items-center">
      <div class="col">
        <% if (user) { %> 
          <form class="form-inline" action="/logout" method="POST">
            <div class="form-group m-3">
              <div class="mr-1">Logged in as: <u><%= user.email %></u>!</div>
              <button type="submit" class="btn btn-outline-dark btn-sm">Logout</button>
            </div>
          </form>
        <% } else { %>
            <a href="/registration" type="submit" class="btn btn-outline-light btn-sm">Register</a>
            <a href="/login" type="submit" class="btn btn-outline-light btn-sm">Login</a>
          </div>
        <% } %>
      </div>
    </div>
</nav>
</header>